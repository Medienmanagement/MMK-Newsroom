<article id="news" class="detail">

<h2><?php echo $this->escape($this->news->headline); ?></h2>
<p class="minor small">
    <?php echo strftime('%e. %B %Y', $this->news->getUpdate('U')); ?> |
    <?php echo $this->escape($this->news->user->title); ?>
